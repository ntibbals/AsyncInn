@model IEnumerable<Async_Inn.Models.HotelRoom>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1 class="col-md-9 offset-md-4" id="col-centered">Current List of Hotel Rooms</h1>

<p class="col-md-4 offset-md-4">
    <a asp-action="Create" id="links" class="col-centered">Create New Hotel Room</a>
</p>
<table class="table col-md-4 offset-md-4 table-bordered">
    <thead class="thead-light">
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetFriendly)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-secondary">
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PetFriendly)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HotelID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HotelID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HotelID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
