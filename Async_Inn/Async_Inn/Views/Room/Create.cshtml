}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Home Page</title>
    <link href="~/reset.css" rel="stylesheet" />

    <link href="~/ControllerHead.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

</head>
<body id="body">
    <header>
        <div id="headcontain">

            <nav id="hamburger" role="navigation">
                <div id="navToggle">
                    <input type="checkbox" />
                    <span></span>
                    <span></span>
                    <span></span>
                    <ul id="nav">
                        <li><a href='/'>Home</a></li>
                        <li><a href='/Hotel'>Create Hotel</a></li>
                        <li><a href='/Amenities'>Create Amenity</a></li>
                        <li><a href='/Room'>Create Room</a></li>
                        <li><a href='/HotelRoom'>Hotel Rooms</a></li>
                        <li><a href='/RoomAmenities'>Room Amenities</a></li>

                    </ul>

                </div>
            </nav>
            <img id="headhotel" src="~/hotelay.png">
            <div id="index-contain">
                <h1 id="index-title">Async Inn Management System</h1>
            </div>
        </div>
    </header>
    <main>
        <div id="create-contain">
            <h1 class="col-md-9 offset-md-4">Create a new Room</h1>

            <h4 class="col-md-4 offset-md-4">Room</h4>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-8 offset-md-8">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-8 offset-md-8">
                            <label asp-for="Layout" class="control-label"></label>
                            <select asp-for="Layout" class="form-control" asp-items="@Html.GetEnumSelectList<Async_Inn.Models.Layouts>()"></select>
                            <span asp-validation-for="Layout" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-8 offset-md-8">
                            <input type="submit" value="Create" id="create-butt" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index" id ="create-butt"class="col-md-6 offset-md-4">Back to List</a>
            </div>
            </div>
    </main>
    <footer></footer>
