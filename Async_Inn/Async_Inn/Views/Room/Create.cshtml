@model Async_Inn.Models.Room

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";

}
    <main>
        <div id="create-contain">
            <h1 class="col-md-9 offset-md-4">Create a new Room</h1>

            <h4 class="col-md-4 offset-md-4">Room</h4>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-8 offset-md-8">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-8 offset-md-8">
                            <label asp-for="Layout" class="control-label"></label>
                            <select asp-for="Layout" class="form-control" asp-items="@Html.GetEnumSelectList<Async_Inn.Models.Layouts>()"></select>
                            <span asp-validation-for="Layout" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-8 offset-md-8">
                            <input type="submit" value="Create" id="create-butt" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index" id ="create-butt"class="col-md-6 offset-md-4">Back to List</a>
            </div>
            </div>
    </main>

